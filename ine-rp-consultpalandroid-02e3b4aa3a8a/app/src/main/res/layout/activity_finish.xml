<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5"
        android:orientation="vertical"
        tools:context="com.consultpal.android.views.FinishActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/finish_picture"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:textSize="@dimen/finish_screen_text_size"
                android:text="@string/finish_text" />


            <ImageView
                android:id="@+id/finish_picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/imageview_square_border"
                android:cropToPadding="true"
                android:padding="1dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/email_notification_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finish_picture"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/exit_screen_message"
                android:textSize="@dimen/finish_screen_text_size"/>

            <Switch
                android:id="@+id/email_notification_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_notification_message"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:text="@string/exit_screen_choice"
                android:textColor="@color/grey_regular_text"
                android:textOff="YES"
                android:textOn="NO"
                android:textSize="@dimen/finish_screen_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:paddingLeft="4dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <TextView
                       android:id="@+id/select_date"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="bottom"
                       android:visibility="gone"
                       android:paddingLeft="6dp"
                       android:drawableLeft="@drawable/ic_date_range_black_24dp"
                       android:drawablePadding="4dp"
                       android:layout_marginBottom="8dp"
                       android:hint="@string/exit_screen_date"
                       android:textSize="@dimen/finish_screen_text_size"
                       android:focusableInTouchMode="true"/>
                   <View
                       android:id="@+id/date_underline"
                       android:layout_width="wrap_content"
                       android:layout_height="1dp"
                       android:layout_margin="4dp"
                       android:visibility="gone"
                       android:background="@color/grey_regular_text" />
               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/select_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:visibility="gone"
                        android:focusableInTouchMode="true"
                        android:layout_marginBottom="8dp"
                        android:paddingStart="4dp"
                        android:paddingLeft="4dp"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/ic_alarm_black_24dp"
                        android:paddingRight="3dp"
                        android:paddingEnd="3dp"
                        android:hint="@string/exit_screen_time"
                        android:textSize="@dimen/finish_screen_text_size"/>
                    <View
                        android:id="@+id/time_underline"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:visibility="gone"
                        android:background="@color/grey_regular_text" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/next_appointment_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/next_appointment_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/exit_button_bg"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/next_appointment_button"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/finish_screen_text_size"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finish_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/finish_exit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/exit_button_bg"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/welcome_exit_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/finish_screen_text_size"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
