<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.consultpal.android.views.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3D3D3B"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_screen_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash_screen_image" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_margin="2dp"
        android:background="@drawable/close_button_ring"
        android:src="@drawable/ic_close_white_24dp" />
</FrameLayout>